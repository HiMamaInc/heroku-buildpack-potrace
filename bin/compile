#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing potrace"

# change to the the BUILD_DIR ($1)
cd $1

# download the binary (-O) silently (-s)
curl http://potrace.sourceforge.net/download/potrace-1.1.linux-amd64.tar.gz -s -O

# make a directory to untar (like unzip) the binary
mkdir -p vendor/potrace

# untar the binary to the directory we want
tar -C vendor/potrace -xvf potrace-1.1.linux-amd64.tar.gz

mkdir -p $BUILD_DIR/.profile.d
cat <<EOF >$BUILD_DIR/.profile.d/000_potrace.sh
export PATH="/app/vendor/potrace/potrace-1.1.linux-amd64/:$PATH"
EOF
